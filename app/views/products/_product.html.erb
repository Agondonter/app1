 <div class="col-sm">
   <p id="title"><%= product.name %></p>
   <%= link_to product do %>
     <%= image_tag(product.thumbnail, class: "img-fluid") %>
   <% end %>
   <p id="text"><%= product.description %></p>
   <%= audio_tag(product.audio, controls: true) %>
   <hr>
   <strong>&dollar;&nbsp;<%= product.price %></strong>
 </div><!-- end column -->