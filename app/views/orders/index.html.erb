<div class="row">
  <% @orders.each do |order| %>
    <div class="col-sm">
      <h1>
      	Order # <%= order.id %>:
      	<%= link_to order.product.name, order %>
      </h1>
      <p><%= order.product.description %></p>
      <strong>&dollar;&nbsp;<%= order.product.price %></strong>
    </div><!-- end column -->
  <% end %>  
</div>